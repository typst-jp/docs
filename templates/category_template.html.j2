{% extends "base_template.html.j2" %}
{% block content %}

<h1 id="summary">{{ body['content']['name'] }}</h1>
{{ body['content']['details'] | safe }}
<h2 id="definitions">Definitions</h2>
<ul class="subgridded">
  {% for item in body['content']['items'] %}
  {% if item['code'] %}
  <li><a href="{{ item['route'] }}"><code>{{ item['name'] }}</code></a><span>{{ item['oneliner'] }}</span>
  </li>
  {% else %}
  <li><a href="{{ item['route'] }}">{{ item['name'] }}</a><span>{{ item['oneliner'] }}</span></li>
  {% endif %}
  {% endfor %}
</ul>

{% endblock %}
